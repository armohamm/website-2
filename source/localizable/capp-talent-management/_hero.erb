<div class="hero">
  <div class="row">

    <div class="col">

      <%= image_tag "logos/capp-new-version.svg", alt: "CAPP LMS", class: "logo" %>

      <h2>
        <%= t("capp-talent-management.hero.title") %>
      </h2>

      <h3>
        <%= t("capp-talent-management.hero.sub_title") %>
      </h3>

    </div>

    <div class="col card">

      <h4>
        <%= t("capp-talent-management.heading-contact") %>
      </h4>

      <%= partial "partials/form", locals: { title: "Contact Request: CAPP Talent Management",
                                             fields: ["name", "email", "organisation", "phone"],
                                             button_text: t("form.submit"),
                                             button_class: "button pink",
                                             action_url: t("urls.contact")} %>

    </div>

  </div>
</div>

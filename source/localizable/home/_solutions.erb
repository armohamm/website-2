<section class="solutions">

  <div class="headline">
    <h2><%= t("products.title") %></h2>
  </div>

  <div class="row">

    <%
    if root_locale == :en
      color = "blue"
    else
      color = "pink"
    end
    %>

    <div class="solution">
      <div class="solution-icon">
        <%= locale_link_to image_tag("icons/learning-#{color}.svg", alt: t("home.solutions.learn.title")), "/capp-lms.html" %>
      </div>
      <h3><%= locale_link_to t("home.solutions.learn.title"), "/capp-lms.html" %></h3>
      <%= markitdown t("home.solutions.learn.text_html", link: locale_link_to("CAPP", "/capp-lms.html")) %>
      <%= locale_link_to t("actions.more_about.capp"), "/capp-lms.html", class: "button small #{color}" %>
    </div>

    <% if root_locale == :de %>

      <div class="solution">
        <div class="solution-icon">
          <%= locale_link_to image_tag("icons/developing-blue.svg", alt: t("home.solutions.develop.title")), "/capp-talent-management.html" %>
        </div>
        <h3><%= locale_link_to t("home.solutions.develop.title"), "/capp-talent-management.html" %></h3>
        <%= markitdown t("home.solutions.develop.text_html", link: locale_link_to("CAPP", "/capp-talent-management.html")) %>
        <%= locale_link_to t("actions.more_about.capp-entwickeln"), "/capp-talent-management.html", class: "button small blue" %>
      </div>

    <% end %>

    <div class="solution">
      <div class="solution-icon">
        <%= locale_link_to image_tag("icons/compliance-turquoise.svg", alt: t("home.solutions.quality.title")), "/kwaliteitspaspoort.html" %>
      </div>
      <h3><%= locale_link_to t("home.solutions.quality.title"), "/kwaliteitspaspoort.html" %></h3>
      <%= markitdown t("home.solutions.quality.text_html") %>
      <%= locale_link_to t("actions.more_about.quality"), "/kwaliteitspaspoort.html", class: "button small turquoise" %>
    </div>

    <div class="solution">
      <div class="solution-icon">
        <%= locale_link_to image_tag("icons/informal-green.svg", alt: t("home.solutions.informal.title")), "/capp-agile-learning.html" %>
      </div>
      <h3><%= locale_link_to t("home.solutions.informal.title"), "/capp-agile-learning.html" %></h3>
      <%= markitdown t("home.solutions.informal.text_html", link: locale_link_to("CAPP Agile Learning", "/capp-agile-learning.html")) %>
      <%= locale_link_to t("actions.more_about.capp-agile"), "/capp-agile-learning.html", class: "button small green" %>
    </div>

  </div>
</section>

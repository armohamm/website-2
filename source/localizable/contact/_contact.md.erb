<section class="contact-main">
  <div class="row">

    <div class="headline">
      <h2><%= t("contact.main.heading") %></h2>
    </div>

    <div class="col">
      <div class="contact-image">
        <%= image_tag "icons/icon-contact.svg", title: t("contact.main.question.heading"), alt: t("contact.main.question.heading") %>
      </div>
      <div class="contact-content">
        <h3><%= t("contact.main.question.heading") %></h3>
        <p><%= t("contact.main.question.info") %></p>
        <a class="button orange" href="#contact-form" data-scroll-to-form><%= t("contact.main.question.button") %></a>
      </div>
      <a class="contact-mobile-trigger" href="#contact-form" data-scroll-to-form></a>
    </div>

    <div class="col">
      <div class="contact-image">
        <%= image_tag "icons/icon-support.svg", title: t("contact.main.support.heading"), alt: t("contact.main.support.heading")  %>
      </div>
      <div class="contact-content">
        <h3><%= t("contact.main.support.heading") %></h3>
        <p><%= t("contact.main.support.info") %></p>
        <a class="button orange" href="javascript:Intercom('show');"><%= t("contact.main.support.button") %></a>
      </div>
      <a class="contact-mobile-trigger" href="javascript:Intercom('show');"></a>
    </div>

  </div>
</section>

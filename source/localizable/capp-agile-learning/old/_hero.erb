<div class="hero">
  <div class="hero-inner">
    <div class="hero-copy">

      <%= image_tag "logos/logo-capp-agile-learning-white-vertical.svg", alt: "CAPP Agile Learning logo", class: "logo-capp-agile-learning" %>

      <h1>
        <%= t("capp-agile.hero.heading") %>

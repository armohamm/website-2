code,
tt {
  background-color: $off-white;
  border-radius: 2px;
  font-size: 0.9em;
  font-weight: $font-weight-bold;
  padding: 0.2em 0.4em;
  white-space: pre-wrap;
}

pre {
  code,
  tt {
    background: none;
    border: 0;
    font-weight: $font-weight-regular;
    padding: 0;
  }
}

<%= Rouge::Themes::Github.render(scope: '.highlight') %>

.highlight {
  border-radius: 3px;
  padding: 10px;
}

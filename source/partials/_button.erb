<% link_to locals[:link], class: "button " + locals[:variant] ||= "default", target: locals[:target] ||= "_self" do %>
  <% if locals[:icon_left] %>
    <%= inline_svg icon_left, class: "inline-svg left" %>
  <% end %>
  <%= locals[:text] %>
  <% if locals[:icon_right] %>
    <%= inline_svg icon_right, class: "inline-svg right" %>
  <% end %>
<% end %>

<% if locals[:scroll] %>
  <% link_to link,
             class: "button " + locals[:variant] ||= "default",
             'data-scroll-to': "",
             target: locals[:target] ||= "_self" do %>
    <% if locals[:icon_left] %>
      <%= inline_svg icon_left, class: "inline-svg left" %>
    <% end %>
    <span>
      <%= locals[:text] %>
    </span>
    <% if locals[:icon_right] %>
      <%= inline_svg icon_right, class: "inline-svg right" %>
    <% end %>
  <% end %>
<% else %>
  <% link_to locals[:link],
             class: "button " + locals[:variant] ||= "default",
             target: locals[:target] ||= "_self" do %>
    <% if locals[:icon_left] %>
      <%= inline_svg icon_left, class: "inline-svg left" %>
    <% end %>
    <span>
      <%= locals[:text] %>
    </span>
    <% if locals[:icon_right] %>
      <%= inline_svg icon_right, class: "inline-svg right" %>
    <% end %>
  <% end %>
<% end %>
